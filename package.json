{
  "name": "snap-ui",
  "version": "1.0.1",
  "description": "A visual testing tool for Playwright.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "snap-ui": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "echo \"Error: no test specified\" && exit 0",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "playwright",
    "visual-testing",
    "screenshot",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Meta-Boltz/snap-ui.git"
  },
  "homepage": "https://github.com/Meta-Boltz/snap-ui#readme",
  "bugs": {
    "url": "https://github.com/Meta-Boltz/snap-ui/issues"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "@playwright/test": "^1.54.2",
    "commander": "^9.4.1",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.4",
    "pixelmatch": "^5.3.0",
    "pngjs": "^6.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^18.19.121",
    "@types/pixelmatch": "^5.2.4",
    "@types/pngjs": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "playwright": "^1.28.0",
    "typescript": "^4.8.4"
  }
}
